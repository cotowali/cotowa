module tar {
  if !has_command('tar.exe') {
    require_command('tar')
  }

  fn create(file: string) |> string {
    inline {
      tar -cf '-' $%file
    }
  }

  fn create_to(archive: string, file: string) {
    inline {
      tar -cf $%archive $%file
    }
  }

  fn string |> extract() {
    sh {
      tar -xf '-'
    }
    pwsh {
      $input | tar -xf '-'
    }
  }

  fn extract_from(archive: string) {
    sh {
      tar -xf $%archive
    }
    pwsh {
      $input | tar -xf $%archive
    }
  }
}
