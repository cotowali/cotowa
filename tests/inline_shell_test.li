fn test_shared_inline_block() {
  var n = 42
  var text: string
  inline {
    %text="%% n = $%n %%"
  }
  assert(text == '% n = 42 %')
}
test_shared_inline_block()

fn test_inline_shell_number() {
  var (n, a, b) = (1, 2, 3)
  assert(a != b)
  sh {
    %a=$%b
    %n=42
  }
  assert(a == b)
  assert(n == 42)

  var n2 = 0
  sh {
    %n2=$(( %n * 2 ))
  }
  assert(n2 == n * 2)
}
test_inline_shell_number()

fn test_inline_shell_escape() {
  var text: string
  var msg = 'hello world'
  sh {
    %text="$(printf '%%%% %%s %%%%' "$%msg")"
  }
  assert(text == "% $msg %")
}
test_inline_shell_escape()

fn test_inline_shell_keyword_var() {
  var sh = ''
  var inline = ''

  inline {
    %inline="inline"
  }
  sh {
    %sh="sh"
  }
  assert(inline == 'inline')
  assert(sh == 'sh')
}
test_inline_shell_keyword_var()
